@{
    ViewData["Title"] = "Perfil";
}

@using kanban.ViewModels
@model ListarUsuariosViewModel

<h2>Mi Perfil</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Bienvenido, @Model.NombreDeUsuario</h5>
        <div class="mt-3">
            <a asp-controller="Tarea" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-info">Ver Mis Tareas</a>
            <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar Perfil</a>
            <form asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@Model.Id" method="post"
                  onsubmit="return confirm('¿Estás seguro de que deseas eliminar tu cuenta?')">
                <button type="submit" class="btn btn-danger">Eliminar Cuenta</button>
            </form>
        </div>
    </div>
</div>
