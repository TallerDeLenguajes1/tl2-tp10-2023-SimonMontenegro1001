@model kanban.ViewModels.ModificarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="lbl.NombreDeUsuario" class="form-label" asp-for="NombreDeUsuario">Nombre: </label>
        <input type="text" class="form-control" id="lbl.NombreDeUsuario" asp-for="NombreDeUsuario">
    </div>
    <div class="mb-3">
        <label for="lbl.Contrasena" class="form-label" asp-for="Contrasena">Contrase√±a: </label>
        <input type="text" class="form-control" id="lbl.Contrasena" asp-for="Contrasena">
    </div>
    <div class="mb-3">
        <label for="lbl.Rol" class="form-label" asp-for="Rol">Rol: </label>
        <input type="text" class="form-control" id="lbl.Rol" asp-for="Rol">
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
