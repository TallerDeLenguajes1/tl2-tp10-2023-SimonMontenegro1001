@{
    ViewData["Title"] = "Perfil";
}

@using kanban.ViewModels
@model ListarUsuariosViewModel

<h2>Mi Perfil</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Bienvenido, @Model.NombreDeUsuario</h5>
        <div class="mt-3">
            <a asp-controller="Tarea" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-info">Ver Mis Tareas</a>
            <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar Perfil</a>
        </div>
    </div>
</div>
