@model kanban.ViewModels.ModificarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar al usuario @Model.NombreDeUsuario</h2>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="NombreDeUsuario" class="form-label">Nombre: </label>
        <input type="text" class="form-control" id="NombreDeUsuario" asp-for="NombreDeUsuario">
        <span asp-validation-for="NombreDeUsuario" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Rol" class="form-label">Rol: </label>
        <select asp-for="Rol" class="form-control">
            <option value="">-- Seleccione un rol --</option>
            @foreach (var rol in Enum.GetValues(typeof(Roles)))
            {
                <option value="@rol">@rol</option>
            }
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<div class="mt-3">
    <a href="@Url.Action("cambiarContrasena", "Usuario", new { id = Model.Id })" class="btn btn-link">Cambiar Contrase√±a</a>
</div>
