@using kanban.ViewModels

@model List<ListarTablerosConTareasViewModel>

@{
    ViewData["Title"] = "Tareas";
}

@foreach (var tablero in Model)
{
    <h2>@tablero.NombreTablero</h2>
    <p>Propietario: @(tablero.EsPropietario ? "Sí" : "No")</p>

    <table class="table table-dark">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th>Estado</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in tablero.Tareas)
            {
                <tr>
                    <td hidden>@tarea.Id</td>
                    <td>@tarea.Estado</td>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.Descripcion</td>
                    <td>
                        @if (tablero.EsPropietario)
                        {
                            <a asp-controller="Tarea" asp-action="Editar" asp-route-id="@tarea.Id">Editar</a>
                        }
                        else
                        {
                            <form asp-controller="Tarea" asp-action="CambiarEstado" asp-route-id="@tarea.Id" method="get">
                                <button type="submit" class="btn btn-primary">Cambiar Estado</button>
                            </form>
                        }

                        <form asp-controller="Tarea" asp-action="Eliminar" asp-route-id="@tarea.Id" method="post"
                            onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta tarea?')">
                            <input type="hidden" name="_method" value="delete" />
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
