@{
    ViewData["Title"] = "Tareas";
}

@using kanban.ViewModels
@model List<ListarTareasViewModel>

<h2>Tareas</h2>

    <table class="table table-dark">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th>Estado</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                <tr>
                    <td hidden>@tarea.Id</td>
                    <td>@tarea.Estado</td>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.Descripcion</td>
                    <td>
                        <a asp-controller="Tarea" asp-action="Editar" asp-route-id="@tarea.Id">Editar</a>
                        <form asp-controller="Tarea" asp-action="Eliminar" asp-route-id="@tarea.Id" method="post"
                                onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta tarea?')">
                            <input type="hidden" name="_method" value="delete" />
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

