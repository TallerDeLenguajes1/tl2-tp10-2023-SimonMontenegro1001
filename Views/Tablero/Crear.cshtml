@using kanban.ViewModels
@model CrearTableroViewModel

<form asp-controller="Tablero" asp-action="Crear" method="post">
    <div class="mb-3">
        <label for="lbl.nombre" class="form-label" asp-for="Nombre">Nombre: </label>
        <input type="text" class="form-control" id="lbl.nombre" asp-for="Nombre">
    </div>

    <div class="mb-3">
        <label for="lbl.descripcion" class="form-label" asp-for="Descripcion">Descripci√≥n: </label>
        <input type="text" class="form-control" id="lbl.descripcion" asp-for="Descripcion">
    </div>


   @if (Model.IsAdmin)
    {
        <div class="mb-3">
            <label for="lbl.IdUsuarioPropietario" class="form-label" asp-for="IdUsuarioPropietario">Usuario Propietario:</label>
            @Html.DropDownListFor(model => model.IdUsuarioPropietario, 
                      new SelectList(Model.Usuarios, "Id", "Nombre", Model.IdUsuarioPropietario), 
                      "-- Seleccionar usuario propietario --", 
                      new { @class = "form-select" })
        </div>
    }

    <button type="submit" class="btn btn-primary">Crear</button>
</form>