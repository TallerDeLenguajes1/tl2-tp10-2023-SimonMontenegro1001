@model kanban.ViewModels.ModificarTableroViewModel

@{
    ViewData["Title"] = "Editar Tablero";
}

<h2>Editar Tablero</h2>

<form asp-controller="Tablero" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion">Descripcion:</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    @if (ViewBag.EsAdmin)
    {
        <div class="form-group">
            <label asp-for="IdUsuarioPropietario">Usuario Propietario:</label>
            <input asp-for="IdUsuarioPropietario" class="form-control" />
        </div>
    }
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
